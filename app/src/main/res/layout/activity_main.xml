<?xml version="1.0" encoding="utf-8"?>
<androidx.wear.widget.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/box_inset_layout_padding"
    android:background="@drawable/splash_background"
    tools:context=".main.MainApp"
    tools:deviceIds="wear">


    <LinearLayout
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtViewEvents"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/content_layout_backg"
                    android:clickable="true"
                    android:fontFamily="sans-serif-thin"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:text="View Events"
                    android:textColor="@color/color_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

                <TextView
                    android:id="@+id/txtViewMeetings"
                    android:layout_width="170dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/content_layout_backg"
                    android:clickable="true"
                    android:fontFamily="sans-serif-thin"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:text="View Meetings"
                    android:textColor="@color/color_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

                <TextView
                    android:id="@+id/txtViewReminders"
                    android:layout_width="170dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:background="@drawable/content_layout_backg"
                    android:clickable="true"
                    android:fontFamily="sans-serif-thin"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:text="View Reminders"
                    android:textColor="@color/color_white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:drawableEndCompat="@drawable/ic_baseline_keyboard_arrow_right_24"
                    android:layout_marginBottom="60dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.wear.widget.BoxInsetLayout>